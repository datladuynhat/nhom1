@model IEnumerable<FiveTeam.Models.ProductFiveTeam>


@{
    ViewBag.Title = "ListProduct";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<style>
    .alert alert-success {
        width: 80%;
        font-weight: bolder;
        color: #FF8C00;
    }

    .table-container, p {
        width: 80%; /* Đặt chiều rộng mong muốn của bảng */
        margin: 0 auto; /* Để căn giữa bảng, sử dụng margin: 0 auto */
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    tr {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        font-size: 1.5rem;
        font-weight: bolder;
        color: var(--black);
    }

    td {
        font-size: 1.5rem;
        color: var(--black);
    }

    .btn-default {
        padding: 0.5rem 1rem; /* Kích thước nút */
        font-size: 1.5rem; /* Kích thước chữ */
        border-radius: 0.5rem; /* Bo góc của nút */
        font-weight: bolder;
        color: #FF8C00;
    }

        .btn-default:hover {
            background-color: var(--orange); /* Màu nền khi hover */
            color: #fff; /* Màu chữ khi hover */
        }

    h3 {
        width: 80%; /* Đặt chiều rộng mong muốn của bảng */
        margin: 0 auto;
        font-size: 3rem;
        font-weight: bolder;
        color: #FF8C00;
    }
</style>

<h1 class="heading"> List <span>Products</span> </h1>
<h1 class="heading"> @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" }) </h1>
<h3>The Five Team</h3>
<div class="table-container">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Productcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Productcode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img src="@Url.Content(item.Picture)"
                         alt="Image"
                         width="100"
                         height="100" />
                </td>
                <td class="default" style="text-align: right;">
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }

    </table>
</div>


